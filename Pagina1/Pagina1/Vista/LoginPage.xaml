<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pagina1.Vista.LoginPage"
             Title="Iniciar Sesión">
    <StackLayout Padding="20">
        <Label Text="Usuario" />
        <Entry x:Name="usernameEntry" Placeholder="Ingrese su usuario" />

        <Label Text="Contraseña" />
        <Entry x:Name="passwordEntry" Placeholder="Ingrese su contraseña" IsPassword="True" />

        <Button Text="Iniciar sesión" Clicked="OnLoginClicked" />

        <!-- Agregamos el Label para mostrar el estado del login -->
        <Label x:Name="statusLabel" Text="" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

        <Button x:Name="RegisterButton" 
                Text="Registrarse"
                Clicked="OnRegisterClicked"/>
    </StackLayout>
</ContentPage>
